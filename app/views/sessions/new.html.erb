<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path,html: {id: "login_form"}) do |f| %>

    <%= hidden_field_tag :rc, @random_challenge %>

      <%= f.label :username %>
      <%= f.text_field :uname,class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password2,class: 'form-control' %>
      <div class="field"style="display: none;">
        <%= f.label :c %><br>
        <%= f.text_area :c%>
      </div>
      <div class="field"style="display: none;">
        <%= f.label :z %><br>
        <%= f.text_area :z %>
      </div>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>

<%= render(:partial=>"users/loginscript") %>